 <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/page_error"
        >
        
     <TextView  
        android:layout_marginTop="10dip"
        android:layout_marginBottom="10dip"  
        android:id="@+id/refresh_error_search"  
        android:padding="10.0dip" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        style="@style/RefreshEmptySearch" 
        android:text="加载失败，请重新加载" 
        android:textColor="#c9caca"
        android:layout_centerInParent="true"/>

        <ImageView
            android:layout_above="@id/refresh_error_search"
            android:id="@+id/page_iv"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:layout_centerHorizontal="true"
            android:scaleType="centerInside"
            android:src="@drawable/ic_error_page" />

        <Button
            android:id="@+id/btn_reload"
            android:layout_below="@id/refresh_error_search"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_bg"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="重新加载"
            android:textColor="#ff717171"
            android:textSize="14sp" />
        
    </RelativeLayout>
