<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
   
	<style name="BottomTabStyle">
	<item name="android:layout_width">wrap_content</item>
	<item name="android:layout_height">wrap_content</item>
	<item name="android:layout_weight">1</item>
	<item name="android:button">@null</item>
	<!-- <item name="android:drawablePadding">5dp</item> -->
	<item name="android:gravity">center</item>
	<!-- <item name="android:background">@drawable/bg_shop_qualification</item> -->
	 
	<!-- <item name="android:padding">5dp</item> -->
	<item name="android:textColor">@drawable/vpi__tab_textcolor</item>
	</style>
	
	
	<style name="bottom_tab_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/bg_shop_qualification</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">5dip</item>
        <item name="android:textColor">@drawable/vpi__tab_textcolor</item>
        <item name="android:textSize">14sp</item>
    </style>
	
	     <style name="RadioButtonStatusDetailTab">
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">@dimen/activity_horizontal_margin</item>
        <item name="android:textColor">@drawable/selector_tv_color</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/layerlist_tab_indicator_sel</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
    </style>
	

</resources>
